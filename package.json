{
  "name": "study-quest-app",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "dist": "next build && electron-builder"
  },
  "build": {
    "appId": "com.ice.studyquest",
    "productName": "Study Quest",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false, 
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "shortcutName": "Study Quest"
    },
    "files": [
      "out/**/*",
      "main.js",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/electron-serve"
    ]
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "electron-serve": "^1.3.0",
    "lucide-react": "^0.378.0",
    "next": "14.2.3",
    "react": "^18",
    "react-dom": "^18",
    "recharts": "^2.12.7",
    "tailwind-merge": "^2.3.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.22",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
